{
  "name": "Dischord",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky",
    "clean:node_modules": "rm -rf node_modules apps/web/node_modules apps/docs/node_modules",
    "clean:cache": "rm -rf .turbo apps/web/.next apps/web/.turbo apps/docs/.next apps/docs/.turbo",
    "clean:all": "rm -rf node_modules apps/web/node_modules apps/docs/node_modules .turbo apps/web/.next apps/web/.turbo apps/docs/.next apps/docs/.turbo"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@repo/eslint-config": "workspace:*",
    "@repo/tailwing-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@repo/ui": "workspace:*",
    "husky": "^9.0.11",
    "prettier": "^3.1.1",
    "turbo": "^1.12.3"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18",
    "npm": "Please use pnpm",
    "yarn": "Please use pnpm"
  }
}
